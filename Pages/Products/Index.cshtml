@page "/{id:int?}"
@model ResoldProducts.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Denumire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Descriere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].DataAdaugarii)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Seller.SellerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ProductCategories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductD.Products) {
    string selectedRow = "";
    if (item.ID == Model.ProductID) 
    {
        selectedRow = "table-success";
    }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Denumire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriere)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAdaugarii)
            </td>
            <td>
                @Html.DisplayNameFor(modelItem => item.Seller.SellerName)
            </td>
            <td>
                @{
                    foreach (var category in item.ProductCategories)
                    {
                        @category.CategoryID @: @category.Category.CategoryName <br />
                    }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
